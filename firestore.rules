rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check user role
    function hasRole(role) {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }
    
    // Helper function to check if user is admin or leader
    function isAdminOrLeader() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'leader'];
    }
    
    // Helper function to check if user is a member of a ministry
    function isMinistryMember(ministryId) {
      return isAuthenticated() && 
             (request.auth.uid in get(/databases/$(database)/documents/ministries/$(ministryId)).data.members);
    }
    
    // Helper function to check if user is a leader of a ministry
    function isMinistryLeader(ministryId) {
      return isAuthenticated() && 
             (request.auth.uid in get(/databases/$(database)/documents/ministries/$(ministryId)).data.leaders);
    }
    
    // Users collection - stores user roles and permissions
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update, delete: if hasRole('admin');
    }
    
    // Members collection - church member profiles
    match /members/{memberId} {
      allow read: if isAuthenticated();
      allow create, update: if isAdminOrLeader();
      allow delete: if hasRole('admin');
    }
    
    // Attendance sessions collection
    match /attendance_sessions/{sessionId} {
      allow read: if isAuthenticated();
      allow create, update: if isAdminOrLeader();
      allow delete: if hasRole('admin');
    }
    
    // Attendance records collection
    match /attendance_records/{recordId} {
      allow read: if isAuthenticated();
      allow create, update: if isAdminOrLeader();
      allow delete: if hasRole('admin');
    }
    
    // Departments collection
    match /departments/{departmentId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if hasRole('admin');
    }
    
    // Contributions collection - financial records
    match /contributions/{contributionId} {
      allow read: if isAuthenticated();
      allow create, update: if isAdminOrLeader();
      allow delete: if hasRole('admin');
    }
    
    // Visitors collection - visitor management and tracking
    match /visitors/{visitorId} {
      allow read: if isAuthenticated();
      allow create, update: if isAdminOrLeader();
      allow delete: if hasRole('admin');
    }
    
    // Special occasions collection - birthdays, anniversaries, celebrations
    match /special_occasions/{occasionId} {
      allow read: if isAuthenticated();
      allow create, update: if isAdminOrLeader();
      allow delete: if hasRole('admin');
    }
    
    // Achievements collection - badges and attendance incentives
    match /achievements/{achievementId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated(); // Auto-awarded by system
    }
    
    // Backups collection - backup history and metadata
    match /backups/{backupId} {
      allow read: if hasRole('admin');
      allow write: if hasRole('admin');
    }
    
    // Ministries collection - church ministries and groups
    match /ministries/{ministryId} {
      // Allow read if user is authenticated
      allow read: if isAuthenticated();
      
      // Allow write if user is an admin or a leader of the ministry
      allow update, delete: if hasRole('admin') || 
        (isAuthenticated() && request.auth.uid in resource.data.leaders);
      
      // Allow creation of new ministries by admins and leaders
      allow create: if isAuthenticated() && (hasRole('admin') || hasRole('leader'));
      
      // Allow adding members/leaders by admins or existing leaders
      allow update: if (
        // Check if the update is only adding members/leaders
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['members', 'leaders']) &&
        (
          hasRole('admin') || 
          (isAuthenticated() && request.auth.uid in resource.data.leaders)
        )
      );
    }
    
    // Allow querying the ministries collection for all authenticated users
    match /ministries {
      allow list: if isAuthenticated();
    }
    
    // Photo gallery collection - event photos and member photos
    match /photo_gallery/{photoId} {
      allow read: if isAuthenticated();
      allow create, update: if isAdminOrLeader();
      allow delete: if hasRole('admin');
    }
    
    // Events collection - church events calendar and management
    match /events/{eventId} {
      // Read permissions:
      // - Admins and leaders can read all events
      // - Members can read public and members-only events
      // - Events without visibility field default to public
      allow read: if isAuthenticated() && (
        isAdminOrLeader() ||
        !('visibility' in resource.data) ||
        resource.data.visibility == 'public' ||
        resource.data.visibility == 'members'
      );
      // Only admins and leaders can create, update, or delete events
      allow create, update: if isAdminOrLeader();
      allow delete: if hasRole('admin');
    }
    
    // Event registrations collection - user registrations for events
    match /eventRegistrations/{registrationId} {
      allow read: if isAuthenticated() && (
        request.auth.uid == resource.data.userId || 
        isAdminOrLeader()
      );
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (
        request.auth.uid == resource.data.userId || 
        isAdminOrLeader()
      );
      allow delete: if isAuthenticated() && (
        request.auth.uid == resource.data.userId || 
        hasRole('admin')
      );
    }
    
    // Ministries collection - ministry management
    match /ministries/{ministryId} {
      allow read: if isAuthenticated();
      allow create: if hasRole('admin');
      allow update: if hasRole('admin') || isMinistryLeader(ministryId);
      allow delete: if hasRole('admin');
      
      // Ministry members subcollection
      match /members/{memberId} {
        allow read: if isAuthenticated() && (isMinistryMember(ministryId) || isMinistryLeader(ministryId) || hasRole('admin'));
        allow create, update: if hasRole('admin') || isMinistryLeader(ministryId);
        allow delete: if hasRole('admin') || isMinistryLeader(ministryId);
      }
      
      // Ministry announcements subcollection
      match /announcements/{announcementId} {
        allow read: if isAuthenticated() && (isMinistryMember(ministryId) || isMinistryLeader(ministryId) || hasRole('admin'));
        allow create, update: if hasRole('admin') || isMinistryLeader(ministryId);
        allow delete: if hasRole('admin') || isMinistryLeader(ministryId);
      }
      
      // Ministry resources subcollection
      match /resources/{resourceId} {
        allow read: if isAuthenticated() && (isMinistryMember(ministryId) || isMinistryLeader(ministryId) || hasRole('admin'));
        allow create, update: if hasRole('admin') || isMinistryLeader(ministryId);
        allow delete: if hasRole('admin') || isMinistryLeader(ministryId);
      }
      
      // Ministry messages subcollection (for chat)
      match /messages/{messageId} {
        allow read: if isAuthenticated() && (isMinistryMember(ministryId) || isMinistryLeader(ministryId) || hasRole('admin'));
        allow create: if isAuthenticated() && (isMinistryMember(ministryId) || isMinistryLeader(ministryId) || hasRole('admin'));
        allow update, delete: if isAuthenticated() && (
          (resource.data.senderId == request.auth.uid) || 
          isMinistryLeader(ministryId) || 
          hasRole('admin')
        );
      }
    }
  }
}
